{
    // General
    "git.ignoreMissingGitWarning": true,
    "update.channel": "none",
    "workbench.iconTheme": "vscode-icons",
    "editor.minimap.enabled": false,
    "workbench.editor.enablePreview": false,
    "workbench.startupEditor": "none",
    "workbench.statusBar.feedback.visible": false,
    "window.openFilesInNewWindow": "on",
    "window.openFoldersInNewWindow": "on",
    "editor.insertSpaces": true,

    "workbench.colorTheme": "Dark (Molokai)",
    "workbench.colorCustomizations": {
        "statusBar.background": "#005f5f",
        "statusBar.noFolderBackground": "#005f5f",
        "statusBar.debuggingBackground": "#005f5f"
    },

    // Plugins
    "vsicons.dontShowNewVersionMessage": true,
    "scrolloff.alwaysCenter": true,
    "projectManager.projectsLocation": "C:\\Users\\natha\\Google Drive\\VSCodePortable\\Data\\code\\User",

    // Vim

    "vim.easymotion": true,
    "vim.easymotionKeys": "hklyuiopnm,wertxcvbasdgjf",
    "vim.easymotionMarkerBackgroundColor": "#859e0c",
    "vim.leader": ",",
    "vim.useSystemClipboard": true,
    "vim.cmdLineInitialColon": true,
    "vim.cursorStylePerMode": {
        "normal": "block-outline",
        "insert": "line-thin",
        "replace": "underline"
    },
    "vim.statusBarColorControl": true,
    "vim.statusBarColors": {
        "normal": "#005f5f",
        "insert": "#5f0000",
        "visual": "#5f00af",
        "visualline": "#005f87",
        "visualblock": "#86592d",
        "replace": "#000000"
    },
    "vim.surround": true,
    "vim.foldfix": false,

    // Vim Keybindings

    "vim.insertModeKeyBindings": [
        {
            "before": ["n", "n"],
            "after": ["<Esc>", "l"]
        },
        {
            "before": ["leader", "m"],
            "after": ["<Esc>", "l", "a"]
        }  
    ],

    "vim.otherModesKeyBindingsNonRecursive": [
        {
            "before": ["H"],
            "after": ["^"]
        },
        {
            "before": ["L"],
            "after": ["$"]
        },
        {
            "before": ["leader", "s"],
            "after": ["leader", "leader", "s"]
        },
        {
            "before": ["leader", "t", "t"],
            "after": [],
            "commands": [
                {
                    "command": "workbench.action.files.save",
                    "args": []
                }
            ]
        },
        {
            "before": ["leader", "h"],
            "after": [],
            "commands": [
                {
                    "command": "workbench.action.quickOpen",
                    "args": []
                }
            ]
        },
    ],
    "window.zoomLevel": 0,
    "git.autofetch": true
}
